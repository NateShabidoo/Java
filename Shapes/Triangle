
public class Triangle implements Shape{
	private String name;  // Instance variable. 
	private double base; // Instance variable.
	private double height;  // Instance variable.
	private double hypotenuse; //Instance variable.
	
	public Triangle (String n, double b, double h) 
	{ // Constructor. 
		name = n;
		base = b;
		height = h;
		//hypotenuse = h2;
		}
	
	public String getName() {   //instance method
		return name; }
	
	public double getArea() {  //instance method
		return (base * height)/2; 
		}
	
	public double getPerim() {  //instance method
		hypotenuse = Math.pow(Math.pow(base, 2) + Math.pow(height,  2),0.5);
		return base + height + hypotenuse;
	}
}
