//this is a shapes project with an interface and multiple classes that prints out shape areas, etc.
public class Rectangle implements Shape {
	private String name;  // Instance variable. 
	private double length; // Instance variable.
	private double width;  // Instance variable.
	
	public Rectangle (String n, double l, double w) 
	{ // Constructor. 
		name = n;
		length = l;
		width = w;
		}
	
	public String getName() {   //instance method
		return name; }
	
	public double getArea() {  //instance method
		return length * width; 
		}
	
	public double getPerim() {  //instance method
		return 2.0 * length + 2.0 * width;
	}
}
